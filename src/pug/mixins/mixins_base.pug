mixin card(image, title,  description)
  article.card
    .card__img_container
      header.header_card
        h3.card__title= `${title}`
      main.main_card  
        figure
          figcaption= `${title}`
          img(src= `${image}` alt= `${description}`)

        // block CONTENT_CARD article.card  
        block CONTENT_CARD 
        // end block CONTENT_CARD article.card
      footer.footer_card 
        p.card__descript= `${description}`
  // end mixin card

